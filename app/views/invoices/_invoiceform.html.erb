<% if current_user.type == "Drycleaner" %>
  <div class="text-center">

    <%= simple_form_for ([current_user, @invoice]) do |f| %>
      <div class="col-md-2 col-md-offset-5">
        <%= f.input :customer_email %>
      </div>
      <div class="col-md-2 col-md-offset-5">
        <%= f.input :name %>
      </div>
      <div class="col-md-4 col-md-offset-4">
        <%= f.input :pickup %>
      </div>
      <div class="col-md-2 col-md-offset-5">
        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      </div>
    <% end %>
    <div class="col-md-2 col-md-offset-5">
      <div class="left-right">
        <h4>Subtotal: $<%= @invoice.subtotal %></h1>
      </div>
      <div class="left-right">
        <h4>Total: $<%= @invoice.total %></h1>
      </div>
    </div>
  </div>
<% else %>
  <div class="text-center">
    <div class="field form-group">
      <h4>Pickup Time</h4>
      <%= @invoice.pickup %>
    </div>
    <div class="col-md-2 col-md-offset-5">
      <div class="left-right">
        <h4>Subtotal: $<%= @invoice.subtotal %></h1>
      </div>
      <div class="left-right">
        <h4>Total: $<%= @invoice.total %></h1>
      </div>
    </div>
  </div>
<% end %>